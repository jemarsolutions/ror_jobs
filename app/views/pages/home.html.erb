  <div class="py-5">
    <h1 class="display-5 fw-bold text-white">ROR Jobs</h1>
    <div class="col-lg-6 mx-auto">
      <p class="fs-5 text-white">Quickly design and customize responsive mobile-first sites with Bootstrap, the worldâ€™s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
    </div>
  </div>
</div>
<%# CTAs %>
<div class="w-100 bg-white">
  <div class="py-3 container">
    <div class="py-5 d-flex flex-row justify-content-between gap-5">
      <div class="rounded col shadow p-4 d-flex align-items-center justify-content-between ">
        <h2 class="fs-bold">For Developers</h2>
        <%= link_to "Browse Jobs", jobs_path, class: "btn btn-primary mt-2" %>
      </div>
      <div class="rounded col shadow p-4 d-flex align-items-center justify-content-between  bg-primary-subtle">
        <h2 class="fs-bold">For Employers</h2>
        <%= link_to "Add Jobs", new_job_path, class: "btn btn-primary mt-2" %>
      </div>
    </div>
  </div>
</div>
<%# Latest Jobs %>
<div class="bg-primary-subtle py-5">
  <div class="container py-5">
    <div class="text-center">
      <h2 class="fw-bold text-dark">Latest Jobs</h2>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
      <% @jobs.each do |job| %>
        <div class="col">
          <div class="card">
            <div class="card-header bg-dark text-white">
              <small class="text-opacity-50 m-0 p-0"><%= job.job_type %></small>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= job.job_title %></h5>
              <p class="card-text"><%= job.job_description.to_plain_text.truncate(100) %></p>
              <%= link_to "View Job", job_path(id: job.id), class: "btn btn-primary" %>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between bg-dark text-white">
              <div class="price-container">
                $<%= number_to_human(job.job_salary_from, :format => '%n%u', :units => {:thousand => 'k'}) %> - $<%= number_to_human(job.job_salary_to, :format => '%n%u', :units => {:thousand => 'k'}) %> / Year
              </div>
              <div class="icon-container d-flex align-items-center gap-2">
                <i class="fa-solid fa-location-dot text-primary"></i><%= job.location %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%# View All Jobs %>
<div class="w-100 bg-white py-4">
  <div class="container py-4 d-flex align-items-center justify-content-between flex-column">
    <%= link_to "View All Jobs", jobs_path, class: "btn btn-lg bg-dark text-white" %>
  </div>
</div>