<div class="d-flex align-items-center justify-content-center mt-5 mb-5" style="min-height: 100vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card rounded shadow">
          <div class="card-body">
            <h2 class="text-center mb-4">
              <% if action_name == "new" %>
                New Job
              <% elsif action_name == "edit" %>
                Edit Job
              <% end %>
            </h2>
            <%= form_with(model: job) do |form| %>
              <% if job.errors.any? %>
                <div class="alert alert-danger">
                  <h3><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h3>
                  <ul>
                    <% job.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group mb-3">
                <%= form.label :job_type, "Job Type" %>
                <%= form.select :job_type, options_for_select(["Full Time", "Part Time"]), {}, {:class => "form-select"} %>
              </div>
              <div class="form-group mb-3">
                <%= form.label :job_title, "Job Title" %>
                <%= form.text_field :job_title, class: "form-control" %>
              </div>
              <div class="form-group mb-3">
                <%= form.label :job_description, "Job Description" %>
                <%= form.rich_text_area :job_description, class: "form-control" %>
              </div>
              <div class="form-group mb-3">
                <%= form.label :job_salary_from, "Salary From" %>
                <%= form.text_field :job_salary_from, class: "form-control" %>
              </div>
              <div class="form-group mb-3">
                <%= form.label :job_salary_to, "Salary To" %>
                <%= form.text_field :job_salary_to, class: "form-control" %>
              </div>
              <div class="form-group mb-3">
                <%= form.label :location, "Location" %>
                <%= form.text_field :location, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :company_id, "Company" %>
                <%= form.select :company_id, options_for_select(@companies.map { |company| [company.name, company.id] }), { prompt: "Select a company" }, class: "form-control" %>
              </div>
              <div class="text-center">
                <%= form.submit "Submit", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
