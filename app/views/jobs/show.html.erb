<div class="container mt-5 mb-5">
  <div class="row">
    <!-- Breadcrumbs -->
    <div class="col-12 mb-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><i class="fas fa-arrow-left mr-1"></i><%= link_to "Back", jobs_path, class: "ms-2" %></li>
          <li class="breadcrumb-item active" aria-current="page">Job Details</li>
        </ol>
      </nav>
    </div>
    <!-- Main Content -->
    <div class="col-lg-8">
      <!-- Job Details Box -->
      <div class="card rounded shadow mb-4">
        <div class="card-body">
          <h3 class="card-title">Job Type</h3>
          <div class="mb-3">
            <p><%= @job.job_type %></p>
          </div>
          <h3 class="card-title">Job Title</h3>
          <div class="mb-3">
            <p><%= @job.job_title %></p>
          </div>
        </div>
        <div class="card-footer bg-primary text-white">
          <h3 class="card-title">Job Location</h3>
          <div>
            <div class="icon-container d-flex align-items-center gap-2">
              <i class="fas fa-map-marker-alt text-white"></i><%= @job.location %>
            </div>
          </div>
        </div>
      </div>
      <div class="card rounded shadow mb-4">
        <div class="card-body">
          <h3 class="card-title">Job Description</h3>
          <div class="mb-3">
            <p><%= @job.job_description %></p>
          </div>
        </div>
        <div class="card-footer bg-primary text-white">
          <h3 class="card-title">Job Salary</h3>
          <div>
            $<%= number_to_human(@job.job_salary_from, :format => '%n%u', :units => {:thousand => 'k'}) %> - $<%= number_to_human(@job.job_salary_to, :format => '%n%u', :units => {:thousand => 'k'}) %> / Year
          </div>
        </div>
      </div>
    </div>
    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Company Info Box -->
      <div class="card rounded shadow mb-4">
        <div class="card-body">
          <h3 class="card-title mb-3">Company Info</h3>
          <h5><%= @company.name %></h5>
          <p><%= @company.company_description.to_plain_text.truncate(400) %></p>
        </div>
        <div class="card-footer py-3">
          <h5 class="card-title">Email</h5>
          <div class="bg-primary-subtle p-2">
            <h6 class="m-0 p-0"><%= @company.email %></h6>
          </div>
          <h5 class="card-title mt-3">Phone</h5>
          <div class="bg-primary-subtle p-2">
            <h6 class="m-0 p-0"><%= @company.phone %></h6>
          </div>
        </div>
      </div>
      <!-- Buttons Box -->
      <div class="card rounded shadow">
        <div class="card-body">
          <h3 class="card-title mb-3">Manage</h3>
          <%= link_to "Edit Job", edit_job_path, class: "btn btn-primary btn-block mb-2 w-100" %>
          <%= link_to "Delete Job", @job, data: { "turbo-method": :delete }, class: "btn btn-danger btn-block w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>